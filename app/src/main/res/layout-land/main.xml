<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center_horizontal"
        >
    <LinearLayout
            android:id="@+id/topControllerBar"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
        <TextView
                android:text="@string/player_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/topRevertStep"
                android:text="@string/revert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:onClick="btnRevertStep"
                android:background="@drawable/menubuttonbg"
                />
        <!--<Button-->
        <!--android:text="Record"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:onClick="btnRecordOnClick"-->
        <!--/>-->
    </LinearLayout>
    <com.vhly.games.wuziqi.game.PanView
            android:id="@+id/gameView"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/panbg"/>
    <LinearLayout
            android:id="@+id/bottomControllerBar"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center"
            >

        <TextView
                android:text="@string/player_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/bottomRevertStep"
                android:text="@string/revert"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="btnRevertStep"
                android:background="@drawable/menubuttonbg"
                />
    </LinearLayout>
</LinearLayout>

